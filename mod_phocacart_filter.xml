                    <option value="1">MOD_PHOCACART_FILTER_YES</option>
                    <option value="0">MOD_PHOCACART_FILTER_NO</option>
                </field>

                <field name="enable_color_filter" type="radio" class="btn-group btn-group-yesno" default="0" label="MOD_PHOCACART_FILTER_FIELD_ENABLE_COLOR_FILTER_ATTR_LABEL" description="MOD_PHOCACART_FILTER_FIELD_ENABLE_COLOR_FILTER_ATTR_DESC">
